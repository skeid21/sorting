{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
    },
    "tasks": [
        {
            "label": "MkdirBuild",
            "type": "shell",
            "command": "mkdir",
            "args": [
                "-p",
                "build"
            ],
            
        },
        {
            "dependsOn": [
                "MkdirBuild"
            ],
            "label": "CMakeGen",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-G",
                "'Unix Makefiles'",
                "-DCMAKE_BUILD_TYPE=DEBUG",
                "${workspaceRoot}"
            ],
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "presentation": {
                "clear": true
            },
            "problemMatcher": []
        },
        {
            "dependsOn": [
                "CMakeGen"
            ],
            "label": "Build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "type": "shell",
            "args": [
                "--build",
                "build",
                "--config",
                "Debug",
                "--target",
                "all",
                "--",
                "-j",
                "8"
            ],
            "command": "cmake",
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": "absolute"
            },
        },
        {
            "dependsOn": [
                "Build"
            ],
            "label": "Run",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/build/bin"
            },
            "command": "./astar"
        },
        {
            "dependsOn": [
                "Build"
            ],
            "label": "Test",
            "type": "shell",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "command": "ctest",
            "args": [
                "-V"
            ],
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
        }
    ]
}